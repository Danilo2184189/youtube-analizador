{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "functions": {
    "api/*": {
      "maxDuration": 10 // Configura este valor a 10 segundos para el plan gratuito
    }
  }
}
